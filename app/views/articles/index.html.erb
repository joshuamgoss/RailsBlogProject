<%= render "universal/topnavbar" %>
<div class="jumbotron text-center">
<h1>Every musing I've committed to digital paper</h1>
</div>

<div class="container">

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th style="width:20%">Title</th>
      <th style="width:60%">Text</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>
  <% @articles.each do |article| %>
    <tr>
      <td style = "max-width: 20px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap"><%= article.title %></td>
      <td style = "max-width: 60px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap"><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New article', new_article_path %>
</div>
