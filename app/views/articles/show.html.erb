<%= render "universal/topnavbar" %>
<div class="jumbotron text-center">
  <h1>Article Details</h1>
</div>

<div class="container">
  <p>
    <strong>
      <h2><%= @article.title %></h2>
    </strong>
  </p>

  <p>
    <%= @article.text %>
  </p>
  <hr/>
</div>
<div class="container">
<h2>Comments:</h2>
<%= render @article.comments %>
  <hr/>
</div>

<div class="container">
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
</div>